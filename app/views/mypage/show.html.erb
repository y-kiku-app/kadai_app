                    <th scope="col">資料名</th>
                    <th scope="col">ダウンロードリンク</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                    <th scope="row">1</th>
                    <td>サンプル資料①</td>
                    <td><%= link_to 'ダウンロードはこちらから', 'https://xfs.jp/WuRx4', target: :_blank, rel: "noopener noreferrer"  %></td>
